@model List<Customer>
@{
    ViewData["Title"] = "Customers Page";
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>
    @if (Model.Count == 0)
    {
        <h2>We do not have any customers :(</h2>
    }
    else
    {
        <ul>
            @foreach (var customer in Model)
            {
                <li><a asp-area="" asp-controller="Customers" asp-action="Customer" asp-route-id="@customer.Id">@customer.Name</a></li>
            }
        </ul>
    }
</div>
