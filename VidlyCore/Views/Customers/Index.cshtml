@model List<Customer>
@{
    ViewData["Title"] = "Customers Page";
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>
    @if (Model.Count == 0)
    {
        <h2>We do not have any customers :(</h2>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td><a asp-area="" asp-controller="Customers" asp-action="Customer" asp-route-id="@customer.Id">@customer.Name</a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
</div>
